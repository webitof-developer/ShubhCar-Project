# Backend environment example
# Copy to .env and provide real values.

NODE_ENV=development
PORT=5000

# Database (set at least one)
MONGO_URI=mongodb://localhost:27017/spareparts-ecommerce
# MONGO_REPLICA_URI=mongodb://mongo1:27017,mongo2:27017,mongo3:27017/spareparts-ecommerce?replicaSet=rs0

# Cache
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379

# JWT / Auth (must be different values)
JWT_SECRET=replace_with_strong_random_secret
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=replace_with_strong_random_refresh_secret
JWT_REFRESH_EXPIRES_IN=15d

# Required for NextAuth session signing (dashboard integration)
NEXTAUTH_SECRET=replace_with_strong_random_nextauth_secret

# CORS / Origins
FRONTEND_ORIGIN=http://localhost:3001
ADMIN_ORIGIN=http://localhost:3000
BACKEND_ORIGIN=http://localhost:5000

# Payments
STRIPE_SECRET_KEY=sk_test_replace_me
STRIPE_WEBHOOK_SECRET=whsec_replace_me
RAZORPAY_KEY_ID=rzp_test_replace_me
RAZORPAY_KEY_SECRET=replace_me
RAZORPAY_WEBHOOK_SECRET=replace_me

# Email
APP_NAME=SHUBH CAR SPARES
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=replace_me
SMTP_FROM=your_email@example.com

# Optional integrations
GOOGLE_CLIENT_ID=
AWS_REGION=
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Tax / Shipping
TAX_RATE=0
GST_DEFAULT_RATE=0.18
GST_ORIGIN_STATE=KA
SHIPPING_FLAT_RATE=0
CHECKOUT_DRAFT_TTL_MINUTES=20

# Observability
LOG_LEVEL=info
METRICS_TOKEN=
